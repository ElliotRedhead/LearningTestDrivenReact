{
    "env": {
        "browser": true,
        "es2020": true,
		"node": true
	},
	"overrides": [
		{
			"files": ["**/*.test.js", "testUtils.js"],
			"env": {
				"jest": true
			}
		}
	],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
		],
		"react/react-in-jsx-scope": "off",
		"eol-last": 1,
		"object-curly-spacing": ["warn", "always"]
	}
}
